{
    "app-id" : "io.github.lainsce.DotMatrixDevel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.github.lainsce.DotMatrix",
    "rename-icon" : "io.github.lainsce.DotMatrixDevel",
    "finish-args" : [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri"
    ],
    "tags" : [
        "nightly"
    ],
    "desktop-file-name-suffix" : " (Devel)",
    "cleanup" : [
        "/cache",
        "/man",
        "/share/aclocal",
        "/share/devhelp",
        "/lib/systemd",
        "/include",
        "/lib/pkgconfig",
        "/lib/libvala*",
        "/share/gtk-doc",
        "/share/man",
        "/share/vala",
        "*.a",
        "*.la"
    ],
    "modules" : [
        {
            "name" : "DotMatrix",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                	"type": "git",
                	"url": "https://github.com/lainsce/dot-matrix.git",
                	"branch" : "main"
                }
            ]
        }
    ]
}

